# Variables públicas para Firebase (prefijo PUBLIC_ requerido por Astro para exponerlas al cliente)
PUBLIC_FIREBASE_API_KEY=
PUBLIC_FIREBASE_AUTH_DOMAIN=
PUBLIC_FIREBASE_PROJECT_ID=
PUBLIC_FIREBASE_STORAGE_BUCKET=
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
PUBLIC_FIREBASE_APP_ID=
PUBLIC_FIREBASE_APPCHECK_KEY= # reCAPTCHA v3 site key o hCaptcha site key (según proveedor elegido)
PUBLIC_FIREBASE_APPCHECK_PROVIDER=recaptcha_v3 # o hcaptcha

# Clave privada (NO exponer). No usar en cliente.
# FIREBASE_API_KEY=

# Web3Forms (clave pública, solo propósitos de formulario)
PUBLIC_WEB3FORMS_ACCESS_KEY=

# Control de funcionalidad de likes
PUBLIC_LIKES_ENABLED=1 # 1 habilita, 0 desactiva completamente el botón (build time)
PUBLIC_LIKES_REALTIME=1 # 1 usa onSnapshot, 0 usa solo una lectura puntual
